{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "outDir": "build",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2015"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    }
  }
}
